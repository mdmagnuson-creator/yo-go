{{#if capabilities.authentication}}
import { auth } from '@/lib/auth/config';
import { redirect } from 'next/navigation';
import Link from 'next/link';
{{/if}}

export default async function HomePage() {
  {{#if capabilities.authentication}}
  const session = await auth();
  
  if (session?.user) {
    redirect('/dashboard');
  }
  {{/if}}

  return (
    <main className="flex min-h-screen flex-col items-center justify-center p-8">
      <div className="mx-auto max-w-2xl text-center">
        <h1 className="mb-4 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
          {{projectNamePascal}}
        </h1>
        <p className="mb-8 text-lg leading-8 text-gray-600 dark:text-gray-400">
          {{description}}
        </p>
        
        <div className="flex items-center justify-center gap-4">
          {{#if capabilities.authentication}}
          <Link
            href="/login"
            className="rounded-lg bg-brand-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600"
          >
            Sign In
          </Link>
          <Link
            href="/signup"
            className="rounded-lg bg-white px-6 py-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:bg-gray-800 dark:text-white dark:ring-gray-700 dark:hover:bg-gray-700"
          >
            Get Started
          </Link>
          {{else}}
          <a
            href="https://github.com"
            className="rounded-lg bg-brand-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-brand-500"
          >
            Get Started
          </a>
          {{/if}}
        </div>
      </div>
    </main>
  );
}
