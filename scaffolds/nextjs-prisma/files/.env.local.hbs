# Database (PostgreSQL) - Local development
# For local PostgreSQL: postgresql://postgres:postgres@localhost:5432/{{projectName}}
# For Docker: postgresql://postgres:postgres@localhost:5432/{{projectName}}
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/{{projectName}}?schema=public"

# NextAuth.js - Generate with: openssl rand -base64 32
AUTH_SECRET=replace-with-random-secret
NEXTAUTH_URL=http://localhost:{{devPort}}

{{#if capabilities.oauthProviders}}
# OAuth Providers - Get from provider dashboards
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

{{/if}}
{{#if capabilities.payments}}
# Stripe - Use test keys for development
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

{{/if}}
{{#if capabilities.email}}
# Email (Resend)
RESEND_API_KEY=re_xxx

{{/if}}
{{#if capabilities.ai}}
# AI (OpenAI)
OPENAI_API_KEY=sk-xxx

{{/if}}
# App
NEXT_PUBLIC_APP_URL=http://localhost:{{devPort}}
NODE_ENV=development
