{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opencode.ai/schemas/test-activity-rules.json",
  "title": "Test Activity Rules",
  "description": "Signal-to-activity mapping for automatic test activity selection",
  "type": "object",
  "required": ["version", "defaults", "filePatterns"],
  "properties": {
    "version": {
      "type": "integer",
      "description": "Schema version for migration support",
      "minimum": 1
    },
    "defaults": {
      "type": "object",
      "description": "Default activities when no patterns match",
      "properties": {
        "e2e": {
          "type": "string",
          "enum": ["immediate", "deferred", "skip"],
          "description": "Default E2E timing"
        },
        "unit": {
          "type": "boolean",
          "description": "Whether to run unit tests by default"
        }
      },
      "required": ["e2e", "unit"]
    },
    "filePatterns": {
      "type": "object",
      "description": "Glob pattern to activity mapping",
      "additionalProperties": {
        "$ref": "#/$defs/activityRule"
      }
    },
    "codePatterns": {
      "type": "object",
      "description": "Regex pattern (in diff content) to activity mapping",
      "additionalProperties": {
        "$ref": "#/$defs/activityRule"
      }
    },
    "crossCuttingRules": {
      "type": "object",
      "description": "Rules that apply across multiple files",
      "properties": {
        "multipleDirectories": {
          "type": "object",
          "properties": {
            "threshold": {
              "type": "integer",
              "description": "Number of distinct directories to trigger rule"
            },
            "add": {
              "$ref": "#/$defs/activityRule"
            }
          }
        },
        "sharedModuleTouch": {
          "type": "object",
          "properties": {
            "paths": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Glob patterns for shared modules"
            },
            "add": {
              "$ref": "#/$defs/activityRule"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "activityRule": {
      "type": "object",
      "properties": {
        "critics": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Critic agents to run (without @ prefix)"
        },
        "unit": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "string" }
          ],
          "description": "Unit test config: true for auto-detect, or specific tester name"
        },
        "e2e": {
          "type": "string",
          "enum": ["immediate", "deferred", "skip"],
          "description": "E2E timing for this pattern"
        },
        "e2eScope": {
          "type": "string",
          "enum": ["direct", "dependents"],
          "description": "Whether to test only direct changes or also dependents"
        },
        "quality": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "array", "items": { "type": "string" } }
          ],
          "description": "Quality critics to run"
        },
        "reason": {
          "type": "string",
          "description": "Human-readable explanation for this rule"
        }
      }
    }
  }
}
