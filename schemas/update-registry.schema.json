{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opencode.ai/schemas/update-registry.json",
  "title": "Update Registry",
  "description": "Central registry of available updates for cross-machine sync and discovery",
  "type": "object",
  "required": ["schemaVersion", "updates"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "schemaVersion": {
      "type": "integer",
      "const": 1,
      "description": "Schema version for future evolution"
    },
    "description": {
      "type": "string"
    },
    "updates": {
      "type": "array",
      "description": "List of available updates",
      "items": {
        "type": "object",
        "required": ["id", "description", "affinityRule", "priority", "updateType", "createdAt"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Update identifier (matches filename format: YYYY-MM-DD-description)",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}-[a-z0-9-]+$"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the update"
          },
          "affinityRule": {
            "type": "string",
            "description": "ID of the affinity rule that determines which projects need this update"
          },
          "priority": {
            "type": "string",
            "enum": ["normal", "high", "critical"],
            "description": "Update priority level"
          },
          "updateType": {
            "type": "string",
            "enum": ["schema", "migration", "config", "dependency", "cve"],
            "description": "Category of update"
          },
          "createdAt": {
            "type": "string",
            "format": "date",
            "description": "Date the update was created (YYYY-MM-DD)"
          },
          "templatePath": {
            "type": "string",
            "description": "Path to the update template file (relative to toolkit root)"
          },
          "deprecated": {
            "type": "boolean",
            "description": "If true, this update is no longer relevant and should be skipped"
          },
          "supersededBy": {
            "type": "string",
            "description": "If set, points to a newer update ID that replaces this one"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
