{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opencode.ai/schemas/applied-updates.json",
  "title": "Applied Updates",
  "description": "Tracks updates that have been applied to a project, enabling cross-machine sync and audit trail",
  "type": "object",
  "required": ["schemaVersion", "applied"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1,
      "description": "Schema version for future evolution"
    },
    "applied": {
      "type": "array",
      "description": "List of applied updates in chronological order",
      "items": {
        "type": "object",
        "required": ["id", "appliedAt", "appliedBy", "updateType"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Update identifier (matches filename without .md extension)",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}-[a-z0-9-]+$",
            "examples": ["2026-02-28-add-desktop-app-config"]
          },
          "appliedAt": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when update was applied"
          },
          "appliedBy": {
            "type": "string",
            "enum": ["builder", "planner", "toolkit", "manual"],
            "description": "Which agent or method applied the update"
          },
          "updateType": {
            "type": "string",
            "enum": ["schema", "dependency", "cve", "migration", "config"],
            "description": "Category of update for filtering and reporting"
          },
          "description": {
            "type": "string",
            "description": "Optional human-readable description of what was changed"
          },
          "affectedFiles": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Optional list of files modified by this update"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
